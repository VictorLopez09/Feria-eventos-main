---
// Importa el componente Layout desde tu directorio de layouts
import Layout from '@/layouts/Layout.astro';
import Welcome from '@/components/Welcome.svelte'
---

<Layout title="Inicio">
  <main class="home-container">
  <Welcome client:only/>
    <p>Explora nuestras ferias de empleo y encuentra tu oportunidad ideal.</p>

    <!-- Sección Sobre Nosotros -->
    <section class="about-section">
      <h2>Sobre Nosotros</h2>
      <p>Somos una plataforma líder en la conexión de talentos con oportunidades de empleo en diversos sectores.</p>
    </section>

    <!-- Sección de Servicios -->
    <section class="services-section">
      <h2>Servicios</h2>
      <ul class="services-list">
        <li>Conexión directa con empresas líderes</li>
        <li>Asesoramiento profesional personalizado</li>
        <li>Ferias de empleo virtuales y presenciales</li>
      </ul>
    </section>
  </main>

  <!-- Pie de página -->
  <footer class="footer">
    <p>© 2024 Ferias de Empleo. Todos los derechos reservados.</p>
  </footer>
</Layout>

<style>
  /* Estilos globales */

  /* Estilos para el contenedor principal */
  .home-container {
    padding: 2rem;
    text-align: center;
    height: 70vh;
  }

  p {
    font-size: 1rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  /* Estilos para las secciones */
  .about-section,
  .services-section {
    margin-bottom: 2rem;
  }

  .services-list {
    list-style: none;
    padding: 0;
  }

  .services-list li {
    margin-bottom: 1rem;
  }

  /* Estilos para el pie de página */
  .footer {
    padding: 1rem;
    background-color: #f8f8f8;
    text-align: center;
  }

  /* Estilos responsivos para pantallas pequeñas */
  @media (max-width: 768px) {
    h1 {
      font-size: 1.5rem;
    }

    p {
      font-size: 0.9rem;
    }
  }
</style>
