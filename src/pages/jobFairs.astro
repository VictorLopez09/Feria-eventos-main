---
import Layout from "@/layouts/Layout.astro";
import Search from "@/components/Search.svelte";
---

<Layout title="Feria de Empleo">
  <div class="container">
    <h1>Feria de Empleo Disponibles</h1>
    <Search client:only />
  </div>
</Layout>
<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    height: auto;
  }

  h1 {
    text-align: center;
    font-size: 3.5rem;
    color: var(--dorado-900);
    margin-bottom: 2rem;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
      text-align: center;
    }
  }
</style>
